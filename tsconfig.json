{
  "compilerOptions": {
    "jsx": "react",
    "target": "es5",
    "module": "UMD",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}